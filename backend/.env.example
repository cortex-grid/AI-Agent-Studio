# Provider selection: "openai" or "azure"
PROVIDER=openai

# OpenAI configuration (when PROVIDER=openai)
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini

# Azure OpenAI configuration (when PROVIDER=azure)
# For AzureAIAgentClient (Azure AI Projects)
AZURE_AI_PROJECT_ENDPOINT=https://your-project.api.azureml.ms
AZURE_AI_PROJECT_SUBSCRIPTION_ID=your-subscription-id
AZURE_AI_PROJECT_RESOURCE_GROUP=your-resource-group
AZURE_AI_PROJECT_NAME=your-project-name

# Azure OpenAI API version
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# MCP endpoints (comma-separated for multiple servers)
MCP_ENDPOINTS=http://localhost:3000,http://localhost:3001

# Tool-specific API keys
GOOGLE_SEARCH_API_KEY=your-google-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id
BING_SEARCH_API_KEY=your-bing-api-key

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false
